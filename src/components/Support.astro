---
import Star from "../components/icons/Star.astro";
import Activity from "../components/icons/Activity.astro";
import PieChart from "../components/icons/PieChart.astro";
import Command from "../components/icons/Command.astro";

interface Rating {
  rating: number;
  title: string;
}

const ratings: Rating[] = [
  {
    rating: 4.9,
    title: "databricks",
  },
  {
    rating: 4.4,
    title: "Chain analysis",
  },
];

const maxStars = 5;
---

<section class="h-[80dvh] grid grid-cols-3 grid-rows-3 pt-30">
  <div class="col-span-2 row-span-3 gap-y-7">
    <h2
      class="font-semibold text-[50px] text-[#191A15] text-left w-154.25 mb-7.5"
    >
      How we support our partner all over the world
    </h2>
    <p class="font-medium text-base text-[#A6A6A6] leading-7.5 w-161 mb-18.25">
      SaaS become a common delivery model for many business application,
      including office software, messaging software, payroll processing
      software, DBMS software, management software
    </p>

    <ul class="flex items-center gap-x-20">
      {
        ratings.map((item) => (
          <li class="flex flex-col gap-y-4.5">
            <div class="flex items-center gap-x-1">
              {Array.from({ length: maxStars }).map((_, index) => (
                <Star
                  fill={index < Math.round(item.rating) ? "#FFC728" : "#BBBBBB"}
                />
              ))}
            </div>
            <h3 class="font-normal text-[#191A15] text-lg">
              <span class="font-bold">{item.rating}</span> / 5 rating
            </h3>
            <p class="font-bold text-lg text-[#A6A6A6]">{item.title}</p>
          </li>
        ))
      }
    </ul>
  </div>
  <article class="col-start-3 flex gap-x-3">
    <div class="pt-2.5 pr-9">
      <Activity fill="#54BD95" />
    </div>
    <div>
      <h3 class="text-[28px] text-[#191A15] font-bold">Publishing</h3>
      <p class="text-[#A6A6A6] text-lg font-medium">
        Plan, collaborate, and publishing your contetn that drivees meaningful
        engagement and growth for your barnd
      </p>
    </div>
  </article>
  <article class="col-start-3 row-start-2 flex gap-x-3">
    <div class="pt-2.5 pr-9">
      <PieChart fill="#54BD95" />
    </div>
    <div>
      <h3 class="text-[28px] text-[#191A15] font-bold">Analytics</h3>
      <p class="text-[#A6A6A6] text-lg font-medium">
        Analyze your performance and create goegeous report
      </p>
    </div>
  </article>
  <article class="col-start-3 row-start-3 flex gap-x-3">
    <div class="pt-2.5 pr-9">
      <Command fill="#54BD95" />
    </div>
    <div>
      <h3 class="text-[28px] text-[#191A15] font-bold">Engagement</h3>
      <p class="text-[#A6A6A6] text-lg font-medium">
        Quiuckly navigate you anda engage with your adience
      </p>
    </div>
  </article>
</section>
